{
    "name": "Jaxx Blockchain Wallet",
    "short_name": "Jaxx",
    "version": "1.2.21",
    "manifest_version": 2,
    "description": "Unifying the Blockchain Wallet experience across devices.",
    "permissions": [
        "storage",
        "background",
        "notifications",
        "tabs",
        "<all_urls>",
        "https://api.kryptokit.com/",
        "https://s3.amazonaws.com/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": {
        "16": "img/jaxx_16.png",
        "48": "img/jaxx_48.png",
        "128": "img/jaxx_128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/jaxx_191.png",
            "38": "img/jaxx_381.png"
        },
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "js/thirdparty.js",
            "js/network.js",
            "js/request.js",
            "js/thirdparty/aes.js",
            "js/thirdparty/bitcoinjs.min.js",
            "js/thirdparty/jquery-2.1.4.min.js",
            "js/utils/cacheUtils.js",
            "js/utils/util.js",
            "js/platform/platformUtils.js"
        ],
        "persistent": true
    }
}
